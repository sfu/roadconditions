<div class="form-container">
    <form id="updateconditions" name="updateconditions" action="/api/1/conditions" method="POST">
        <fieldset id="conditions">
            <legend>Current Conditions</legend>
            <div>
                <label for="campus">Campus:</label>
                <select id="campus" name="campus">
                    <option value="open" data-defaultstatus="normal">open</option>
                    <option value="closed" data-defaultstatus="alert">closed</option>
                    <option value="reopened" data-defaultstatus="warning">reopened</option>
                </select>
                <label class="status_label" for="campus_status">Status: </label>
                <select id="campus_status" name="campus_status">
                    <option value="normal">normal</option>
                    <option value="warning">warning</option>
                    <option value="alert">alert</option>
                </select>
            </div>
            <div>
                <label for="roads">Roads:</label>
                <select id="roads" name="roads">
                    <option value="clear" data-defaultstatus="normal">Clear</option>
                    <option value="closed" data-defaultstatus="alert">Closed</option>
                    <option value="covered with dry snow" data-defaultstatus="alert">Covered with dry snow</option>
                    <option value="covered with wet snow" data-defaultstatus="alert">Covered with wet snow</option>
                    <option value="covered with hard snow" data-defaultstatus="alert">Covered with hard snow</option>
                    <option value="dry" data-defaultstatus="normal">Dry</option>
                    <option value="good" data-defaultstatus="normal">Good</option>
                    <option value="icy" data-defaultstatus="alert">Icy</option>
                    <option value="light snow" data-defaultstatus="warning">Light snow</option>
                    <option value="partially clear" data-defaultstatus="warning">Partially clear</option>
                    <option value="snow (beware of possible ice)" data-defaultstatus="alert">Snow (beware of possible ice)</option>
                    <option value="snow" data-defaultstatus="alert">Snow</option>
                    <option value="wet" data-defaultstatus="normal">Wet</option>
                    <option value="wet (possible icy conditions)" data-defaultstatus="warning">Wet (possible icy conditions)</option>
                </select>
                <label class="status_label" for="roads_status">Status: </label>
                <select id="roads_status" name="roads_status">
                    <option value="normal">normal</option>
                    <option value="warning">warning</option>
                    <option value="alert">alert</option>
                </select>
            </div>
            <div>
                <label for="adjacentroads">Adjacent Roads:</label>
                <select id="adjacentroads" name="adjacentroads">
                    <option value="not applicable" data-defaultstatus="normal">not applicable</option>
                    <option value="closed" data-defaultstatus="alert">closed</option>
                    <option value="use caution" data-defaultstatus="warning">use caution</option>
                    <option value="use extreme caution" data-defaultstatus="alert">use extreme caution</option>
                </select>
                <label class="status_label"  for="adjacentroads_status">Status: </label>
                <select id="adjacentroads_status" name="adjacentroads_status">
                    <option value="normal">normal</option>
                    <option value="warning">warning</option>
                    <option value="alert">alert</option>
                </select>
            </div>
            <div>
                <label for="transit">Transit Service</label>
                <select id="transit" name="transit">
                    <option value="on schedule" data-defaultstatus="normal">on schedule</option>
                    <option value="delayed" data-defaultstatus="warning">delayed</option>
                    <option value="not running" data-defaultstatus="alert">not running</option>
                </select>
                <label  class="status_label" for="transit_status">Status: </label>
                <select id="transit_status" name="transit_status">
                    <option value="normal">normal</option>
                    <option value="warning">warning</option>
                    <option value="alert">alert</option>
                </select>
            </div>
            <div>
                <label for="classes">Classes:</label>
                <select id="classes" name="classes">
                    <option value="on schedule">as scheduled</option>
                    <option value="cancelled (morning classes)" data-defaultstatus="normal">cancelled (morning classes)</option>
                    <option value="cancelled (afternoon classes)" data-defaultstatus="alert">cancelled (afternoon classes)</option>
                    <option value="cancelled (evening classes)" data-defaultstatus="alert">cancelled (evening classes)</option>
                    <option value="cancelled (all classes)" data-defaultstatus="alert">cancelled (all classes)</option>
                    <option value="cancelled until further notice" data-defaultstatus="alert">cancelled until further notice</option>
                </select>
                <label  class="status_label" for="classes_status">Status: </label>
                <select id="classes_status" name="classes_status">
                    <option value="normal">normal</option>
                    <option value="warning">warning</option>
                    <option value="alert">alert</option>
                </select>
            </div>
            <div>
                <label for="exams">Exams:</label>
                <select id="exams" name="exams">
                    <option value="as scheduled" data-defaultstatus="normal">as scheduled</option>
                    <option value="postponed" data-defaultstatus="alert">postponed</option>
                </select>
                <label  class="status_label" for="exams_status">Status: </label>
                <select id="exams_status" name="exams_status">
                    <option value="normal">normal</option>
                    <option value="warning">warning</option>
                    <option value="alert">alert</option>
                </select>
            </div>
        </fieldset>

        <fieldset>
            <legend>Announcements</legend>
            <div>
                <label for="announcements">Main Announcements</label>
                <textarea id="announcements" name="announcements"></textarea>
            </div>
            <div>
                <label for="sidebar0">Sidebar Item</label>
                <textarea id="sidebar0" name="sidebar0"></textarea>
            </div>
            <div>
                <label for="sidebar1">Sidebar Item</label>
                <textarea id="sidebar1" name="sidebar1"></textarea>
            </div>
            <div>
                <label for="sidebar2">Sidebar Item</label>
                <textarea id="sidebar2" name="sidebar2"></textarea>
            </div>
            <button>Add new sidebar item</button>
        </fieldset>

        <fieldset>
            <legend>Links</legend>

            <fieldset class="category-group">
            <!-- I think this legend can be removed because you'll be displaying existing link groups in the category text input below
				<legend>Transit Links</legend> -->

				<div>
					<label for="category">Category</label><br />
                	<input name="text" id="text"/>
				</div>

				<div>
                	<label for="text">Text</label><br />
                	<input name="text" id="text"/>
            	</div>

				<div>
                	<label for="url">URL</label><br />
                	<input name="url" id="url"/>
				</div>

                <button>Add new link</button>

			</fieldset>

			<fieldset class="category-group">

				<div>
					<label for="category">Category</label><br />
                	<input name="text" id="text"/>
				</div>

				<div>
                	<label for="text">Text</label><br />
                	<input name="text" id="text"/>
            	</div>

				<div>
                	<label for="url">URL</label><br />
                	<input name="url" id="url"/>
				</div>

                <button>Add new link</button>

			</fieldset>

            <button>Add new category</button>

        </fieldset>
        <input type="submit" value="Submit"/>
    </form>
</div>

