<div id="status">
            
    <div class="primary">
                    
        <ul>
            <li><h2>The university is <span class="{{ campus.status }}">{{ campus.condition }}</span></h2></li>
            <li class="datestamp" data-lastupdated={{lastupdated}}>Report updated at <span>{{dateFormat lastupdated format="h:mm a [on] MMMM DD YYYY"}}<span></li>
        </ul>
                    
    </div>
                
    <div class="secondary">
                    
        <ul>
            <li>University roads: <span class="{{ roads.status }}">{{ roads.condition }}</span></li>
            <li>Adjacent roads: <span class="{{ adjacentroads.status }}">{{ adjacentroads.condition}}</span></li>
            <li class="divider">Classes are: <span class="{{ classes.status }}">{{ classes.condition }}</span></li>
            <li>Translink buses are: <span class="{{ transit.status }}">{{ transit.condition }}</span></li>
            <li>Exams are: <span class="{{ exams.status }}">{{ exams.condition }}</span></li>
        </ul>
            
    </div>
            
</div>
            
<div id="announcements">
                
    <h3>Campus announcements</h3>
                
    <div class="primary">        
        {{{ announcements }}}
    </div>
                
                
    <div class="secondary">
        {{#each sidebar}}
        <div>{{{this}}}</div>
        {{/each}}
    </div>
                
</div>
            
<div id="webcams">
                
    <h3>Burnaby webcams</h3>
                
    <ul>
        <li><h4>University Drive North</h4>
            <a href="http://www.sfu.ca/itservices/technical/webcams/webcams_library.html"><img src="http://www.sfu.ca/~netops/webcams/libcam.jpg" alt="University Drive North" /></a>
        </li>
        <li><h4>Gaglardi intersection</h4>
            <a href="http://www.sfu.ca/itservices/technical/webcams/webcams_gaglardi.html"><img src="http://www.sfu.ca/~netops/webcams/gaglardicam.jpg" alt="Gaglardi intersection" /></a>
        </li>
        <li><h4>Convocation Mall</h4>
            <a href="http://www.sfu.ca/itservices/technical/webcams/webcams_convo.html"><img src="http://www.sfu.ca/~netops/webcams/mallcam.jpg" alt="Convocation Mall" /></a>
        </li>
    </ul>
            
</div>
            
<div id="links">
    <h3>Other resources</h3>
    {{#each links}}
        <div>
            <h4>{{category}}</h4>
            <ul>
            {{#each this.links}}
                <li><a href="{{url}}">{{text}}</a></li>
            {{/each}}
            </ul>
        </div>
    {{/each}}
</div>